<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/title" layout="@layout/layout_title" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/title">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/title">
                <ImageView android:layout_gravity="center_vertical" android:id="@id/image_bayonet" android:layout_width="fill_parent" android:layout_height="100.0dip" android:src="@drawable/jk_29" />
            </LinearLayout>
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="ID :" style="@style/tv_site_info" />
                <TextView android:id="@id/txt_site_id" android:text="" style="@style/et_site_info" />
            </LinearLayout>
            <View style="@style/gap_site_info" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="父ID :" style="@style/tv_site_info" />
                <TextView android:id="@id/txt_site_parentid" android:text="" style="@style/et_site_info" />
            </LinearLayout>
            <View style="@style/gap_site_info" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="名称 :" style="@style/tv_site_info" />
                <TextView android:id="@id/txt_site_name" android:text="" style="@style/et_site_info" />
            </LinearLayout>
            <View style="@style/gap_site_info" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="可视范围(米) :" style="@style/tv_site_info" />
                <EditText android:id="@id/edt_visiable_range" android:text="" android:inputType="number" style="@style/et_site_info" />
            </LinearLayout>
            <View style="@style/gap_site_info" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="经度 :" style="@style/tv_site_info" />
                <TextView android:id="@id/tv_lo" style="@style/et_site_info" />
            </LinearLayout>
            <View style="@style/gap_site_info" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="纬度 :" style="@style/tv_site_info" />
                <TextView android:id="@id/tv_la" style="@style/et_site_info" />
            </LinearLayout>
            <View style="@style/gap_site_info" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="高程(米) :" style="@style/tv_site_info" />
                <EditText android:id="@id/edt_elevation" android:text="" android:digits=".0123456789" android:inputType="number" style="@style/et_site_info" />
            </LinearLayout>
            <View style="@style/gap_site_info" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="塔高(米) :" style="@style/tv_site_info" />
                <EditText android:id="@id/edt_tower_height" android:text="" android:digits=".0123456789" android:inputType="number" style="@style/et_site_info" />
            </LinearLayout>
            <View style="@style/gap_site_info" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="安装地址 :" style="@style/tv_site_info" />
                <EditText android:id="@id/edt_address" android:text="" style="@style/et_site_info" />
            </LinearLayout>
            <View style="@style/gap_site_info" />
            <Button android:id="@id/alter" android:text="保存" style="@style/save_bt1" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>