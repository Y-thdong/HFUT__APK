<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/title" layout="@layout/layout_title" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/title">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/title">
                <ImageView android:layout_gravity="center_vertical" android:id="@id/image_bayonet" android:layout_width="fill_parent" android:layout_height="100.0dip" android:src="@drawable/jk_29" />
            </LinearLayout>
            <LinearLayout style="@style/bryonet_info_ll_style">
                <LinearLayout style="@style/bryonet_info_tx_style">
                    <TextView android:text="卡口名称 :" style="@style/tv_must_choose1" />
                </LinearLayout>
                <EditText android:id="@id/edt_name_bayonet" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout android:visibility="gone" style="@style/bryonet_info_ll_style">
                <TextView android:text="设备编号 :" style="@style/bryonet_info_tx_style" />
                <TextView android:gravity="center_vertical" android:id="@id/txt_bayonet_id" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View android:visibility="gone" style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="位置 :" style="@style/bryonet_info_tx_style" />
                <TextView android:gravity="center_vertical" android:id="@id/tv_location" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="高程 :" style="@style/bryonet_info_tx_style" />
                <EditText android:id="@id/edt_elevation" android:inputType="numberDecimal" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="地址 :" style="@style/bryonet_info_tx_style" />
                <EditText android:id="@id/edt_address" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <LinearLayout style="@style/bryonet_info_tx_style">
                    <TextView android:text="卡口IP :" style="@style/tv_must_choose1" />
                </LinearLayout>
                <EditText android:id="@id/edt_control_ip" android:digits=".0123456789" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <LinearLayout style="@style/bryonet_info_tx_style">
                    <TextView android:text="卡口端口 :" style="@style/tv_must_choose1" />
                </LinearLayout>
                <EditText android:id="@id/edt_bayonet_port" android:inputType="number" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="呼叫转移ID :" style="@style/bryonet_info_tx_style" />
                <EditText android:id="@id/call_forward" android:text="" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="呼叫转移帐号 :" style="@style/bryonet_info_tx_style" />
                <EditText android:id="@id/receice_alarm_person" android:text="" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout android:orientation="horizontal" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="20.0dip" android:layout_marginTop="20.0dip" android:layout_marginRight="20.0dip">
                <Button android:textSize="16.0sp" android:textColor="@color/white" android:id="@id/alter" android:background="@drawable/button_shape" android:padding="5.0dip" android:layout_width="0.0dip" android:layout_height="40.0dip" android:layout_marginRight="20.0dip" android:text="更改" android:layout_weight="1.0" />
                <Button android:textSize="16.0sp" android:textColor="@color/white" android:id="@id/delete" android:background="@drawable/button_shape_red" android:padding="5.0dip" android:layout_width="0.0dip" android:layout_height="40.0dip" android:layout_marginLeft="20.0dip" android:text="删除" android:layout_weight="1.0" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>