<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/title" layout="@layout/layout_title" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/title">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/title">
                <ImageView android:layout_gravity="center_vertical" android:id="@id/image_bayonet" android:layout_width="fill_parent" android:layout_height="100.0dip" android:src="@drawable/jk_29" />
            </LinearLayout>
            <LinearLayout style="@style/bryonet_info_ll_style">
                <LinearLayout style="@style/bryonet_info_tx_style">
                    <TextView android:text="卡口名称 :" style="@style/tv_must_choose1" />
                </LinearLayout>
                <EditText android:id="@id/edt_name_bayonet" android:hint="请输入卡口名称" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="位置 :" style="@style/bryonet_info_tx_style" />
                <TextView android:id="@id/tv_location" android:hint="点击定位" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="高程 :" style="@style/bryonet_info_tx_style" />
                <EditText android:id="@id/edt_elevation" android:hint="请输入卡口高程" android:digits=".0123456789" android:inputType="number" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="地址 :" style="@style/bryonet_info_tx_style" />
                <EditText android:id="@id/edt_address" android:hint="请输入卡口地址" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <LinearLayout style="@style/bryonet_info_tx_style">
                    <TextView android:text="卡口IP :" style="@style/tv_must_choose1" />
                </LinearLayout>
                <EditText android:id="@id/edt_control_ip" android:hint="请输入卡口IP" android:digits=".0123456789" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <LinearLayout style="@style/bryonet_info_tx_style">
                    <TextView android:text="卡口端口 :" style="@style/tv_must_choose1" />
                </LinearLayout>
                <EditText android:id="@id/edt_bayonet_port" android:hint="请输入卡口端口" android:inputType="number" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="呼叫转移ID :" style="@style/bryonet_info_tx_style" />
                <EditText android:id="@id/call_forward" android:hint="请输入呼叫转移ID" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <LinearLayout style="@style/bryonet_info_ll_style">
                <TextView android:text="呼叫转移帐号 :" style="@style/bryonet_info_tx_style" />
                <EditText android:id="@id/receice_alarm_person" android:hint="请输入呼叫转移帐号" style="@style/bryonet_info_et_style" />
            </LinearLayout>
            <View style="@style/bryonet_info_interval_style" />
            <Button android:id="@id/alter" android:text="添加" style="@style/save_bt1" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>